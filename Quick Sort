#include<stdio.h>
#include<conio.h>

int partition(int a[], int lb, int ub)
{

  int down, up, x, temp;
  down = lb;
  up = ub;
  x = a[lb];
  while(down < up)
  {
    while(a[down] <= x && down < up)
      down++;
    while(a[up]>x)
      up--;
    if(down < up)
    {
      temp = a[down];
      a[down] = a[up];
      a[up] = temp;
    }
  }
  a[lb] = a[up];
  a[up] = x;
  return up;
}

void quicksort(int a[], int lb, int ub)
{
  int j;
  if(lb < ub)
  {
    j = partition(a, lb, ub);
    quicksort(a, lb, j-1);
    quicksort(a, j+1, ub);
  }
}

void main()
{
  clrscr();
  int a[10], n, i;
  printf("Enter the number of elements: ");
  scanf("%d", &n);
  printf("Enter the elements\n");
  for(i = 0; i < n; i++)
    scanf("%d", &a[i]);
  if(n==1)
    printf("The sorted array is: %d", a[0]);
  else if(n==2)
  {
    int p=0;
    if(a[p]>a[p+1])
      printf("The sorted array is: %d\t%d", a[p+1], a[p]);
    else
      printf("The sorted array is: %d\t%d", a[p], a[p+1]);
  }
  else
  {
  quicksort(a, 0, n-1);
  printf("The sorted array is:\n");
  for(i = 0; i < n; i++)
    printf("%d \t", a[i]);
  }
  getch();
}
